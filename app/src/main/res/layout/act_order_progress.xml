<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar_base"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white">


                <ImageView
                    android:id="@+id/order_img"
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/order_img"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="卫浴洁具安装"
                        android:textColor="#151515"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="￥30"
                        android:textColor="#c42a60"
                        android:textSize="16sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/item_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/item_img1"
                    android:text="购买数量"
                    android:textColor="#030303"
                    android:textSize="16sp" />


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/order_sub"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selecteor_add_sub_btn"
                        android:clickable="false"
                        android:gravity="center"
                        android:src="@mipmap/ic_launcher"
                        android:text="-"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/order_buy_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="1"
                        android:textColor="#030303"
                        android:textSize="16sp" />


                    <Button
                        android:id="@+id/order_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/selecteor_add_sub_btn"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/address"
                    android:text="购买数量"
                    android:textColor="#030303"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/to_right_grey" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/time"
                    android:text="请选择上门时间"
                    android:textColor="@color/comm_grey_666666"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/to_right_grey" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <EditText
                    android:id="@+id/et_name"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/name"
                    android:hint="联系人姓名"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <EditText
                    android:textCursorDrawable="@null"
                    android:layout_toRightOf="@id/mobile"
                    android:background="@null"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="15867006543"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/et_mobile" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.5dp"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/mark"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <EditText
                    android:id="@+id/et_mark"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/mark"
                    android:hint="您有什么要求，请告知我们"
                    />

            </RelativeLayout>

            <LinearLayout

                android:layout_marginTop="0.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">








            </LinearLayout>

            <RelativeLayout
                android:id="@+id/scroll_btn"
                android:visibility="invisible"
                android:layout_marginTop="0.5dp"
                android:background="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_standard_one"
                    android:background="@color/line_color"/>

                <TextView
                    android:id="@+id/temp2"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:text="待支付:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toRightOf="@id/temp2"
                    android:text="¥30元"
                    android:layout_alignBaseline="@id/temp2"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:text="去支付"
                    android:textColor="@android:color/white"
                    android:background="@drawable/shape_bg_colorprimary"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
       android:id="@+id/bottom_btn"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_standard_one"
            android:background="@color/line_color"/>

        <TextView
            android:id="@+id/temp1"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:text="待支付:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/temp1"
            android:text="¥30元"
            android:layout_alignBaseline="@id/temp1"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="去支付"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_bg_colorprimary"
            android:layout_width="100dp"
            android:layout_height="match_parent" />


    </RelativeLayout>


</RelativeLayout>